<span id="result-selected-options" class="hidden" data-scope="pageset" data-controller="results" data-resultset="<%= documents_path( params.to_unsafe_h.merge({rows: '1000000'})) %>" data-pageset="/fetch?">
  <span class="dropdown">
    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Export Data
      <%= inline_svg_tag "cloud-download-alt-solid.svg", class: 'icon baseline' %>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" data-action="click->results#exportCSV" href="javascript:void(0);">
        CSV
      </a>
      <a class="dropdown-item" data-action="click->results#exportJsonGBLv1" href="javascript:void(0);">JSON (GeoBlacklight v1.0)</a>
      <div class="dropdown-divider"></div>
      <a class="dropdown-item" data-action="click->results#exportJSON" href="javascript:void(0);">JSON (GEOMG App)</a>
    </div>
  </span>

  <span class="dropdown">
    <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Publication State
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <%= form_with(model: BulkAction.new, html: { data: { type: "html", action: "submit->results#setPubState" } }) do |form| -%>
        <%= form.hidden_field :scope, value: "-" %>
        <%= form.hidden_field :field_name, value: "Publication State" %>
        <%= form.hidden_field :field_value, value: "" %>

        <a class="dropdown-item" data-action="click->results#setPubFieldNameValue" href="javascript:void(0);">Published</a>

        <a class="dropdown-item" data-action="click->results#setPubFieldNameValue" href="javascript:void(0);">Unpublished</a>

        <a class="dropdown-item" data-action="click->results#setPubFieldNameValue" href="javascript:void(0);">Draft</a>
      <% end %>
    </div>
  </span>

  <!--<span>
    <a class="btn btn-sm btn-outline-primary" data-action="click->results#bulkAction" href="javascript:void(0);">Bulk Action</a>
  </span>-->
</span>
